{
  "name": "AprilTag Detector + Draw Stack",
  "context": "perception_lab",
  "stackId": "org.eclipse.muto.samples:apriltag-detector",
  "arg": [
    { "name": "black_border_width", "value": "1" },
    { "name": "blur", "value": "0.0" },
    { "name": "camera", "value": "camera" },
    { "name": "decimate_factor", "value": "1.0" },
    { "name": "image", "value": "image_raw" },
    { "name": "image_transport", "value": "raw" },
    { "name": "max_allowed_hamming_distance", "value": "0" },
    { "name": "tags", "value": "tags" },
    { "name": "num_threads", "value": "1" },
    { "name": "tag_family", "value": "tf36h11" },
    { "name": "type", "value": "umich" }
  ],
  "param": [],
  "composable": [
    {
      "name": "apriltag_detector_container",
      "namespace": "",
      "package": "rclcpp_components",
      "executable": "component_container",
      "node": [
        {
          "pkg": "apriltag_detector",
          "plugin": "apriltag_detector::DetectorComponent",
          "name": "detector",
          "namespace": "$(arg camera)",
          "param": [
            { "name": "black_border_width", "value": "$(arg black_border_width)" },
            { "name": "blur", "value": "$(arg blur)" },
            { "name": "decimate_factor", "value": "$(arg decimate_factor)" },
            { "name": "image_transport", "value": "$(arg image_transport)" },
            { "name": "max_allowed_hamming_distance", "value": "$(arg max_allowed_hamming_distance)" },
            { "name": "num_threads", "value": "$(arg num_threads)" },
            { "name": "tag_family", "value": "$(arg tag_family)" },
            { "name": "type", "value": "$(arg type)" }
          ],
          "remap": [
            { "from": "image", "to": "$(arg image)" },
            { "from": "tags", "to": "$(arg tags)" }
          ],
          "extra_arg": [
            { "name": "use_intra_process_comms", "value": "True" }
          ]
        },
        {
          "pkg": "apriltag_draw",
          "plugin": "apriltag_draw::ApriltagDraw",
          "name": "apriltag_draw",
          "namespace": "$(arg camera)",
          "param": [
            { "name": "image_transport", "value": "$(arg image_transport)" },
            { "name": "max_queue_size", "value": 200 }
          ],
            "remap": [
              { "from": "image", "to": "$(arg image)" },
              { "from": "tags", "to": "$(arg tags)" }
            ],
            "extra_arg": [
              { "name": "use_intra_process_comms", "value": "True" }
            ]
        }
      ]
    }
  ],
  "node": []
}
