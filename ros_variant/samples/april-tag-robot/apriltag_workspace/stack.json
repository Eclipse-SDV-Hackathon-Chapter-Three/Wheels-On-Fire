{
  "apiVersion": "muto.eclipse.org/v1",
  "kind": "Stack",
  "metadata": {"name": "apriltag-tracking", "version": "1.0.0"},
  "spec": {
    "nodes": [
      {"name": "camera-driver", "runtime": "container", "image": "registry.example.com/robot/camera:1.0.0", "outputs": ["/camera/image_raw"]},
      {"name": "apriltag-detector", "runtime": "container", "image": "registry.example.com/robot/apriltag:1.0.0", "inputs": ["/camera/image_raw"], "outputs": ["/apriltag/detections"], "env": {"TAG_FAMILIES": "tag36h11"}},
      {"name": "telemetry-bridge", "runtime": "container", "image": "registry.example.com/robot/telemetry:1.0.0", "inputs": ["/apriltag/detections"], "policy": {"restart": "always"}}
    ]
  }
}
