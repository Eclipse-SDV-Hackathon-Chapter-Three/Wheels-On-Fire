{
  "siteInfo": {
    "siteId": "my-agent",
    "currentSite": {
      "baseUrl": "",
      "username": "",
      "password": ""
    }
  },
  "api": {
    "pubsub": {
      "shared": true,
      "provider": {
        "type": "providers.pubsub.memory",
        "config": {}
      }
    },
    "keylock": {
      "shared": true,
      "provider": {      
        "type": "providers.keylock.memory",
        "config": {
          "mode": "Global",
          "cleanInterval" : 30,
          "purgeDuration" : 43200
        }
      }
    },
    "vendors": [
      {
        "type": "vendors.echo",
        "route": "greetings",
        "managers": []
      },
      {
        "type": "vendors.solution",
        "loopInterval": 15,
        "route": "solution",
        "managers": [
          {
            "name": "solution-manager",
            "type": "managers.symphony.solution",
            "properties": {
              "providers.persistentstate": "mem-state",                
              "providers.config": "mock-config",  
              "providers.secret": "mock-secret",
              "providers.keylock": "mem-keylock",
              "isTarget": "true",
              "targetNames": "pc-target",
              "poll.enabled": "true"              
            },
            "providers": {
              "mem-state": {
                "type": "providers.state.memory",
                "config": {}
              },     
              "mem-keylock": {
                "type": "providers.keylock.memory",
                "config": {
                  "mode" : "Shared"
                }
              },         
              "mock-config": {
                "type": "providers.config.mock",
                "config": {}
              },
              "mock-secret": {
                "type": "providers.secret.mock",
                "config": {}
              },
              "ankaios":{
                "type": "providers.target.rust",
                "config": {
                  "name": "ankaios-type",
                  "libFile": "./providers/libankaios.so",
                  "libHash": "fc8dcf15ebe24d6eae0a71345dcb9e01dcb19fd0fabf232b6aa512697a064ff6"
                }
              }
            }
          }
        ]
      }
    ]
  },
  "bindings": [
    {
      "type": "bindings.mqtt",
      "config": {
        "brokerAddress": "tcp://localhost:1883",
        "clientID": "my-agent",
        "requestTopic": "coa-request",
        "responseTopic": "coa-response"
      }
    }
  ]
}